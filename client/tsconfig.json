{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@assets/*": ["assets/*"],
    },
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/*.d.ts"
  ]
}